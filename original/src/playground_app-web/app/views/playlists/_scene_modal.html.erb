  <%= form_tag scenes_installation_playlist_path(@installation, @playlist) do %>
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">Ã—</button>
      <h3>Select scenes</h3>
      Choose the scenes you want to add to the playlist and click the <strong>Add Scenes</strong> button.
    </div>
    <div class="modal-body">
      <table class="table table-striped table-bordered table-condensed index">
        <thead>
          <tr>
            <th></th>
            <th>Scene</th>
            <th>Author</th>
          </tr>
        </thead>
        <% @scenes.each do |scene| %>
          <tr>
            <td>
              <%= check_box_tag "scenes[]", scene.id %>
            </td>
            <td><%= scene.title %></td>
            <td><%= scene.author.display_name %></td>
          </tr>
        <% end %>
      </table>
    </div>
    <div class="modal-footer">
      <%= tbs_button_link 'Cancel', '#', data: { dismiss: 'modal' } %>
      <%= button_tag 'Add Scenes', type: 'submit', name: 'commit', class: 'btn btn-success' %>
    </div>
  <% end %>
