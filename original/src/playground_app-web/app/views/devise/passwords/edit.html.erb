<%= provide :title, 'Password change' %>
<%= page_header('Change your password') %>

<%= simpler_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, :as => :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password, :label => "New password", :required => true %>
    <%= f.input :password_confirmation, :label => "Confirm password", :required => true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Change my password", class: 'btn btn-primary' %>
    <%= tbs_button_link 'Cancel', root_path %>
  </div> 
<% end %>