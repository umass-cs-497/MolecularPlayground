<header class="navbar">
	<div class="navbar-inner">
		<div class="container">
			<%= link_to 'Playground App', root_path, class: 'brand' %>
			<nav>
				<ul class="nav pull-right">
					<% if user_signed_in? %>
						<li><%= link_to 'Scenes', scenes_path %></li>
						<li><%= link_to 'Users', users_path %></li>
						<li><%= link_to 'Installations', installations_path %></li>
						<li id='fat-menu' class='dropdown'>
							<%= link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } do %>
								<%= current_user.full_name %> <b class="caret"></b>
							<% end %>
							<ul class="dropdown-menu">
								<li><%= link_to 'Edit profile', edit_user_path(current_user) %></li>
								<li><%= link_to 'Change password', change_password_path(current_user) %></li>
								<li class="divider"></li>
								<li><%= link_to 'Sign out', sign_out_path, method: 'delete' %></li>
							</ul>
						</li>
					<% else %>
						<li><%= link_to 'Sign in', sign_in_path %></li>
					<% end %>
				</ul>
			</nav>
		</div>
	</div>
</header>