<%= render 'crud_tabs' %>
<%= tbs_active_tab 'Delete' %>
<h4>
	Are you sure you want to delete <em><%= @user.full_name %></em>? 
	Any scenes associated with this user will also be deleted!
</h4>
<div class="form-actions">
	<%= tbs_button_link "Yes, I'm sure", @user, style: 'danger', method: :delete %>
	<%= tbs_button_link 'Cancel', users_path %>
</div>